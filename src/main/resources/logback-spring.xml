<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOGS" value="./logs"/>

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <appender name="RollingFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/blue-supply.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${LOGS}/archived/blue-supply-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <appender name="cloud-watch" class="io.github.dibog.AwsLogAppender">

        <awsConfig>
            <credentials>
                <accessKeyId>AKIAWXSSRE5EGOAPE4HL</accessKeyId>
                <secretAccessKey>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</secretAccessKey>
            </credentials>

            <!--            <profileName>awsProfile</profileName>-->

            <region>us-east-2</region>

            <clientConfig class="com.amazonaws.ClientConfiguration">
                <proxyHost></proxyHost>
                <proxyPort></proxyPort>
            </clientConfig>
        </awsConfig>

        <createLogGroup>true</createLogGroup>
        <queueLength>100</queueLength>
        <groupName>bsupply</groupName>
        <streamName>stream-bsupply</streamName>
        <dateFormat>yyyyMMdd_HHmm</dateFormat>

        <layout>
            <pattern>[%X{a} %X{b}] %-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </layout>

    </appender>


    <!-- LOG everything at INFO level -->
    <root level="info">
        <appender-ref ref="RollingFile"/>
        <appender-ref ref="Console"/>
    </root>

    <!-- LOG "com.baeldung*" at TRACE level -->
    <logger name="com.logistics.bluesupply" level="trace" additivity="false">
        <appender-ref ref="RollingFile"/>
        <appender-ref ref="Console"/>
        <level value="DEBUG"/>
    </logger>


</configuration>